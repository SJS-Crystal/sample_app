<% provide :title, t(".home") %>
<% content_for :validate_image do %>
  <%= javascript_include_tag "custom.js" %>
<% end %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= raw t ".micropost_feed_h3" %>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".sample_app" %></h1>
    <h2>
      <%= t ".content1" %>
      <%= link_to t(".content2"), Settings.link6 %>
      <%= t ".content3" %>
    </h2>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(Settings.image1, alt: t(".rails_logo")),
    Settings.link5 %>
<% end %>
